          $adtype = arg(3) ? arg(3) : $edit['adtype'];
          $form['adtype'] = array(
            '#type' => 'radios', 
            '#title' => t('Style of ad'), 
            '#options' => drupal_map_assoc($adtypes), 
            '#default_value' => $adtype ? $adtype : $adtypes[0], 
            '#required' => TRUE, 
            '#description' => t('Select the type of ad that you wish to create from the above options.')
