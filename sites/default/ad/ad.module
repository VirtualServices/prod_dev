      '#type' => 'markup', 
      '#prefix' => '<div>',
      '#suffix' => '</div>',
      '#value' => t('The current date and time is "%date".', array('%date' => format_date(time(), 'custom', 'F j, Y H:i')))
    );
    $form['schedule']['autoactivate'] = array( 
      '#type' => 'textfield', 
